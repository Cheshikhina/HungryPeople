mixin page_header(data, isBig=false)
	.container.header__inner
		.header__inner_mobile
			.header__logo
				+img(data.logoLink)
			button(class='header__burger' type='button' aria-label='Open menu')
				span(aria-hidden='true')
		nav.header__nav
			.header__nav_inner
				+links(data.headerNavLinks.left, true)
			.header__nav_img
				+img(data.logoLink)
			.header__nav_inner
				+links(data.headerNavLinks.right, true)
		if !isBig
			.header__down_scroll
				a(href='#home' aria-label='scroll top' data-anchor='true').header__scroll
					span

		if isBig
			.header__box
				.header__time= data.blockMiddle.time
				.header__middle
					p.header__middle_subtitle= data.blockMiddle.subtitle
					h1.header__middle_title.underline.underline--big= data.blockMiddle.title
					.header__middle_controls
						a(href=`#${data.blockMiddle.btnName.href}` data-anchor='true').button.header__middle_btn= data.blockMiddle.btnName.name
						.header__middle_search
							+form(data.blockMiddle.form).header__middle_field
					.header__middle_scroll
						a(href='#about_us' aria-label='scroll down' data-anchor='true').header__scroll
							span

				.header__socials
					+links(data.blockMiddle.socialSvg, false, true)

